@model Sinhvien.Models.SinhVien

@{
    ViewBag.Title = "Xóa thông tin sinh viên";
}

<h2>Xóa thông tin sinh viên</h2>

<div>
    <h4>Bạn có chắc chắn muốn xóa?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Mã SV</dt>
        <dd>@Html.DisplayFor(model => model.MaSv)</dd>
        <dt>Họ Tên</dt>
        <dd>@Html.DisplayFor(model => model.HoTen)</dd>
        <dt>Giới Tính</dt>
        <dd>@Html.DisplayFor(model => model.GioiTinh)</dd>
        <dt>Ngành Học</dt>
        <dd>@Html.DisplayFor(model => model.MaNganh)</dd>
    </dl>
</div>

@using (Html.BeginForm("DeleteConfirmed", "SinhVien", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaSv)
    <input type="submit" value="Xóa" class="btn btn-danger" />
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-default" })
}
